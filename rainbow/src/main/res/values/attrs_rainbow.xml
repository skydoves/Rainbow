<?xml version="1.0" encoding="utf-8"?>
<resources>
  <declare-styleable name="RainbowView">
    <attr name="rainbowView_colors" format="reference" />
    <attr name="rainbowView_radius" format="dimension" />
    <attr name="rainbowView_orientation" format="enum">
      <enum name="top_bottom" value="0" />
      <enum name="diagonal_top_right" value="1" />
      <enum name="right_left" value="2" />
      <enum name="diagonal_bottom_right" value="3" />
      <enum name="bottom_top" value="4" />
      <enum name="diagonal_bottom_left" value="5" />
      <enum name="left_right" value="6" />
      <enum name="diagonal_top_left" value="7" />
    </attr>
  </declare-styleable>
  <declare-styleable name="BinaryRainbowView">
    <attr name="binaryRainbowView_startColor" format="color" />
    <attr name="binaryRainbowView_centerColor" format="color" />
    <attr name="binaryRainbowView_endColor" format="color" />
    <attr name="binaryRainbowView_radius" format="dimension" />
    <attr name="binaryRainbowView_orientation" format="enum">
      <enum name="top_bottom" value="0" />
      <enum name="diagonal_top_right" value="1" />
      <enum name="right_left" value="2" />
      <enum name="diagonal_bottom_right" value="3" />
      <enum name="bottom_top" value="4" />
      <enum name="diagonal_bottom_left" value="5" />
      <enum name="left_right" value="6" />
      <enum name="diagonal_top_left" value="7" />
    </attr>
  </declare-styleable>
</resources>